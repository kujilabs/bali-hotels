<!DOCTYPE html>
<%= render '/refinery/html_tag' %>
  <% site_bar = render('/refinery/site_bar', :head => true) -%>
  <%= render '/refinery/head' %>
  <script type="text/javascript" src="http://use.typekit.com/abi0fos.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <body>
    <%= site_bar -%>
    <%= render '/refinery/ie6check' if request.env['HTTP_USER_AGENT'] =~ /MSIE/ -%>
    <div id="page_container"  class="container">
      <header id="header">

        <div id="megahead">
          <div class="left">

              <%= link_to image_tag('peninsula_bay_resort_logo.png'), refinery.root_path %>
            
          </div>
          <div class="right">
            <div id="mainslider" class="slideshow">
              <% (1..4).each do |i| %>
                <%= image_tag "slider/#{i}.jpg" %>
              <% end %>
            </div>
            <div id="navigator">
              <%= render :partial => "/refinery/menu", :locals => { :dom_id => 'menu', :css => 'menu' } %>
            </div>
          </div>
        </div>        

      </header>
      <section id="page" class="container">
        <h1 id='logo' class="tk-dejarip">Peninsula Bay Resort - Bali</h1>  
        <%= yield %>
      </section>
      <footer class="container">
        <%= render '/refinery/footer' -%>
      </footer>
    </div>
    <%= render '/refinery/javascripts' %>
  </body>
</html>
